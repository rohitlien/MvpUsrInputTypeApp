<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/comment_main_bg"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentInitText"
            android:text="@string/comment_init_text"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_20" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/mCommentSwitch"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_80"
            android:hint="@string/comment_hint"
            android:gravity="start"
            android:id="@+id/mCommentEt"
            android:visibility="gone"
            android:padding="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@+id/commentInitText"
            android:background="@drawable/comment_bg"/>
    </RelativeLayout>
</LinearLayout>